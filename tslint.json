{
  "extends": "tslint:recommended",
  "rules": {
    "curly": [true, "ignore-same-line"],
    "interface-name": [true, "never-prefix"],
    "max-classes-per-file": false,
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*",
      "template/**"
    ]
  }
}
